<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearCuenta"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="50dp"
        android:text="Crear Cuenta de Ahorros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_marginTop="20dp"
        android:text="Nro de cuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/nrocuentaCCuenta"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textColor="@color/colorPrimary" />
    <!--
    <TextView
        android:layout_marginTop="20dp"
        android:text="Fecha de apertura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/fechaapertCCuenta"
        android:textColor="@color/colorPrimary"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>
    -->
    <TextView
        android:layout_marginTop="20dp"
        android:text="Saldo Inicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"/>
    <EditText
        android:id="@+id/etsaldoInicialCCuenta"
        android:textColor="@color/colorPrimary"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Guardar Cuenta"
        android:id="@+id/btnguardarcuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>